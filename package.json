{
  "private": true,
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"#src/scss/**/*.scss\" \"#src/components/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig & npm run stylelint",
    "build": "cross-env NODE_ENV=production gulp build & gulp imagemin",
    "deploy": "cross-env NODE_ENV=production gulp build & gulp imagemin && gulp deployFtp",
    "gh": "cross-env NODE_ENV=production gulp build & gulp imagemin && gulp deploy",
    "start": "cross-env NODE_ENV=development gulp start",
    "webp": "gulp webp",
    "imagemin": "gulp imagemin"
  },
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "#src/**/*.html",
    "#src/js/**/*.js",
    "#src/img/**/*.svg",
    "#src/scss/**/*.{sass,scss}",
    "#src/components/**/*.{sass,scss}"
  ],
